<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_34"
    android:orientation="vertical"
    tools:context=".Action">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="00dp"
        android:backgroundTint="#51B5FF"
        android:id="@+id/ViewAll">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="View All Hospitals"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"></TextView>

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_35"
            android:layout_gravity="center"></ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="00dp"
        android:id="@+id/ViewNearby"
        android:backgroundTint="#51B5FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="NearBy Hospitals"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"></TextView>

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_36"
            android:layout_gravity="center"></ImageView>

    </androidx.cardview.widget.CardView>



</LinearLayout>